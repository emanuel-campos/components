<div id="<%= id %>" class="Card">
  <div class="Card-header">
    <%= header %>
  </div>
  <% sections.each do |section| %>
    <div class="Card-section<%= " Card-section--#{section.size}" if section.size %>">
      <%= section %>
    </div>
  <% end %>
  <div class="Card-footer">
    <%= footer %>
  </div>
</div>
